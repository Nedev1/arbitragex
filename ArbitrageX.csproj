<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <OutputType>WinExe</OutputType>
    <TargetFramework>net48</TargetFramework>
    <UseWPF>true</UseWPF>
    <PlatformTarget>x64</PlatformTarget>
    <Platforms>x64</Platforms>
    <LangVersion>12.0</LangVersion>
    <Nullable>enable</Nullable>
    <ImplicitUsings>disable</ImplicitUsings>
    <AssemblyName>ArbitrageX</AssemblyName>
    <RootNamespace>ArbitrageX</RootNamespace>
  </PropertyGroup>

  <ItemGroup>
    <None Update=".env">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </None>
  </ItemGroup>

  <ItemGroup>
    <Compile Remove="ZmqServer.cs" />
    <Compile Remove="PipeServer.cs" />
    <Compile Remove="ArbitrageEngine.cs" />
    <Compile Remove="Bridges\**\*.cs" />
    <None Include="Bridges\**\*" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="System.Threading.Channels" Version="8.0.0" />
    <PackageReference Include="System.Memory" Version="4.5.5" />
  </ItemGroup>

  <ItemGroup>
    <Reference Include="rapiplus">
      <HintPath>rapiplus.dll</HintPath>
      <Private>True</Private>
    </Reference>
  </ItemGroup>
</Project>
